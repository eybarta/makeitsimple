@import 'rupture'
@import 'settings'

// rupture settings
rupture.mobile-cutoff = 415px

.txt
    color #8aa7be
    line-height 20px
    letter-spacing 1.1px
    +below(breaks.mobile)
        color darken(#8aa7be, 15)
        font-size 4.5vmin
        line-height 1.1
.minitxt
    small-txt()
    letter-spacing 1.1px
    line-height 1.1
    color darken(lightgray, 15)
    strong
        font-weight normal
        color #023451
.subtxt
    color rgba(lightblue, 0.7)
    font-family 'Helvetica Neue'
    letter-spacing 0.5px
a, a.link, a.link:visited
    color linkblue
    transition color 200ms ease
    +above(breaks.mobile)
        &:hover
            color lighten(linkblue, 15)

.item-group
    lost-utility clearfix
    .item
        +below(breaks.mobile)
            &:not(:first-child)
                margin-top 60px
        img
            margin-bottom 20px
            width 70%
            max-width 170px
            +below(breaks.mobile)
                max-width initial
                width 80%
        .minitxt
            padding 0 9%
            +below(breaks.mid)
                padding 0
            +below(breaks.mobile)
                font-size 4.2vmin


.preview-section
    .item-group
        padding-top 80px
        +below(breaks.mobile)
            padding-top 90px
            img
                margin-left -3px

.mis-slider
    padding-top 120px
    text-align center
    margin 0 auto
    width 98%
    +below(breaks.mobile)
        padding-top 140px
        width 100%
        h2 span
            text-align left

// INTROS
#simpleIntro
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    z-index 8
    width 111%
    opacity 0.7
    // &Mobile
    //     self-center()
    //     transform translate(-50%, -125%)
    //     +below(breaks.mobile)
    //         top 35%
    //         z-index 999
.intro
    position relative
    &.hp
        position absolute
        bottom 0
        opacity 0
    overflow hidden
    background url('./assets/img/bg.jpg') no-repeat 50% 50% / cover
    transition opacity 200ms ease
    .hotspot
        self-center()
        top 48%
        width 80%
        height 18%
        z-index 999
        @media screen and (-webkit-min-device-pixel-ratio:0)
            cursor pointer
    +below(breaks.mobile)
        background-image url('./assets/img/mobile-bg.jpg')
    &.stick
        position fixed
        z-index 999
    video
        z-index 11
        self-center()
        width 100%
    
    .mobile-play
        self-center()
        text-align center
        width 100%
        img:last-child
            +above(410px)
                width 98%
        & > *
            display inline-block

    // &:before
        // +below(737px)
        //     content ''
        //     background url('./assets/img/mobile-simple-intro.png') no-repeat 50% 60% / auto
        //     position absolute 0 false false 0
        //     width 100%
        //     height 100%
        //     z-index 1
        //     +portait()
        //         background-position 50% 50%
        //         background-size 95% auto
    &.intro-v3:before
        background-image url('./assets/img/v3-big.jpg')
    /.pages-wrap .page-intro
        background url('./assets/img/bg.jpg') no-repeat 50% 0 / cover
        +below(breaks.mobile)
            background-position 50% 0
        &:before
            display none
    .intro-txt
        +below(breaks.mobile)
            width 80%
    .close-btn
        border-radius 18px
        border 1px solid #fff
        width 35px
        height 35px
        position absolute 30px false false 30px
        z-index 99999
        box-shadow 0 0 0.5px 0px white inset, 0 0 0.5px 0px white
        opacity 0.8
        @extend $cross
        &:before, &:after
            background #fff
            width 60%
    .i-360
        position absolute
        bottom 30px
        right 60px
        font-size 14px
        color #708190
        z-index 13
        opacity 0
        transition opacity 400ms ease-in-cubic
        +below(breaks.mobile)
            inline-mid()
            bottom 2px
            right auto
            left 2px
            display none
        img
            position relative
            transition transform 800ms ease-out-back
            
    em
        font-size 14px
        font-style italic
        color #fff
        display inline-block
        padding 0 2px
    .play-overlay
        absolute-center()
        position absolute 0 0 0 0
        cursor pointer
        z-index 12
        transition opacity 200ms ease-out
        img
            max-width 302px
            cursor pointer
            +below(breaks.tablet)
                width 60%
        div
            top 75%
            text-align center
            +below(breaks.bigger)
                top 80%
            span
                display block
            span:first-child
                font-size responsive 24px 48px
                color #fff
                padding-bottom 15px
            span:nth-child(2)
                mid-txt()
                letter-spacing 0.8px
                color #05a5e6
        .intro-txt
            width 100%
    iframe
        position absolute 0 0 0 0
        width 100%
        height 100%
        z-index 13
        transition opacity 200ms ease
        +below(breaks.tablet)
            top 0
            height 100%
    &.hp.playoverlay
        cure-me()
        &:before, video
            // blur-me()
        .play-overlay
            // background rgba(darkblue, 0.8)
            opacity 1
        .i-360
            opacity 1
            +below(breaks.mobile)
                display none
.page-intro
    .floater
        position absolute
        top 18%
        left 10%
        +below(breaks.mobile)
            display none
            top 2%
            left 2%
            transform scale(0.8)                 
.play
    #playintro
        opacity 0 !important
    #i360
        opacity 0 !important
    &:before
        opacity 0.8
    iframe
        display block
.midtxt
    color #8c8c8c
    text-align center
    line-height 1.2
    letter-spacing 0.5px
    display block
    margin 0 auto
    +below(breaks.mid)
        width 40%
.bottom-graphic
    position relative
    background url('./assets/img/v3-bottom-graphic.jpg') no-repeat 50% bottom / auto 100%
    padding-bottom 16%
    margin-top 4%
    &.bigger
        padding-bottom 21%
    +below(breaks.base)
        padding-bottom 26%
        margin-top 10%
    +below(breaks.mid)
        min-height 5vh
        padding-bottom 30%
        margin-top 20%
    +below(breaks.mobile)
        min-height 22vh
.flip-title
    direction rtl
    white-space nowrap    
    +below(breaks.tablet)
        white-space normal
        padding-bottom 60px
    & > *
        display inline-block
        +mobile()
            display block
    .subtxt
        sub-title()
        direction ltr
        text-align right
        +below(breaks.tablet)
            margin-top 15px
            text-align left
        +below(breaks.mobile)
            font-size 4.5vmin
            line-height 1.1


// FAQ BLOCK
.faq-block
    gutters()
    h2
        text-align center
        +below(breaks.mobile)
            text-align left
            width 70%
.faq-control
    width 80%
    margin 100px auto 0
    +below(breaks.mobile)
        margin-top 90px
        width 100%
    h5
        font-family "Helvetica Neue"
        display inline-block
        vertical-align top
        width 40%
        color #0a314c
        text-align center
        padding-top 12px
        +below(breaks.tablet)
            width auto
            display block
            text-align left
            padding-top 0
            padding-bottom 57px

    .qa
        display inline-block
        vertical-align top
        width 55%
        border-left 1px solid gray
        padding-left 28px
        +below(breaks.tablet)
            width auto
            display block
        ul
            padding-top 25px
            li
                position relative
                margin 20px 0 20px
                padding-left 28px
                cursor pointer
                &:first-child
                    margin-top 0
                &:last-child
                    margin-bottom 0
                for num in 1..10
                    &:nth-child({num}) label > div:before
                        content ''+num
                label
                    cursor pointer
                    &>div
                        &:before
                            position absolute
                            top 0
                            left 0
                            transform translateY(5%)
                
                    h6
                        mid()
                        sub-title()
                        color #444
                        width 75%
                    .answer
                        mid-txt()
                        line-height 1.3
                        color gray
                        padding-top 20px
                        max-height 0
                        overflow hidden
                        transition max-height 400ms ease
                        +below(breaks.tablet)
                            color darken(gray, 25)
                    .plus
                        position absolute
                        top 5px
                        right 0
                        width 11px
                        height 10px
                        &:before, &:after
                            content ''
                            position absolute
                            top 50%
                            left 50%
                            transform translate(-50%,-50%)
                            height 1px
                            width 100%
                            background gray
                        &:before
                            display block
                            // background darken(linkblue, 12)
                            background gray
                            height 1px
                            transform translate(-50%,-50%) rotate(-90deg)
                    input:checked
                        & + div
                            &:after
                                content ''
                                position absolute
                                top 0
                                left -28px
                                height 100%
                                border-left 2px solid linkblue
                        & + div .plus
                            &:after
                                background darken(linkblue, 12)
                            &:before
                                display none
                        & + div h4
                            color linkblue
                        & + div .answer
                            max-height 230px
                            +below(breaks.mobile)
                                max-height 430px

                &:after
                    content ''

                
// GOOGLE MAP
.google-map-wrapper
    width 100%
    height 70vh
    .google-map
        height 100% !important
    h4
        font-family 'HelveticaLight'
        font-size 12px
        padding 10px 0 0 15px
        color #8e8e8e
        +above(breaks.mobile)
            display none


// INFO BLOCK
.info-block
    overflow hidden
    +above(breaks.tablet)
        &.info-hp
            h2
                margin-bottom 120px
    +below(breaks.mobile)
        &.info-hp h2
            font-size 36px
            margin-bottom 95px
    +below(breaks.big)
        &:not(.num-grp)
            gutters(110px, 80px)
        h3
            padding-bottom 95px
            font-size 36px
    +below(breaks.mobile)
        li
            padding-bottom 12vh
       
    +tablet(orientation: portrait)
        &:not(.num-grp)
            padding-top 8vh
            h3
                padding-bottom 0
            ul
                padding-left 13%
                padding-top 8vh
                li
                    padding-bottom 5vh
            .out-links
                padding-top 0
            .img-wrap
                height auto
        &.num-grp
            .less-items
                li:last-child
                    float none
                    margin 0 auto
    +tablet(orientation: landscape)
        h3
            padding-bottom 65px
        .in-line
            .img-wrap
                position relative
                height 120px !important
                img
                    position absolute
                    bottom 0
                    max-width 70%
            &:nth-child(3)
                img
                    max-width 88%
    +between(breaks.tablet, breaks.big)
        &.info-hp
            h2
                margin-bottom 100px
            ul
                padding 0 6%
                li
                    margin-right 0
                    padding-left 0 !important
                    white-space nowrap
                    &:first-child, &:nth-child(2)
                        padding-bottom 70px
                    inline-grp(top)
                    float left !important
                    & > *
                        &.img-wrap
                            inline-grp(top)
                            // padding-right 3%
                            height auto
                            width 45%
                            text-align right
                            img
                                max-width 60%
                        &.out-links
                            padding-left 30px
                            padding-top 6px                              
                            a
                                text-indent 0
                                white-space normal
                                font-family 'HelveticaLight'
                                font-size 15px
                    &:nth-child(3)
                        .img-wrap img
                            max-width 100%
                    &:nth-child(4)
                        .img-wrap img
                            max-width 65%
    // +tablet(orientation: landscape)
    //     &:not(.num-grp) ul:not(.group-3)
    //         padding-left 18%

    li:last-child
        padding-bottom 0
    .img-wrap
        position relative
        height 160px
        padding-left 30px
        +below(breaks.big)
            height auto
        +below(breaks.mobile)
            height auto
            text-align left
            padding-left 0
        img
            margin 0 auto
            +above(breaks.big)
                position absolute
                bottom 0
            +below(breaks.mobile)
                max-height 160px
                max-width 80%
                margin 0 0 2%
        +below(breaks.tablet)
            inline-grp(bottom)
            margin-bottom 28px
        +below(breaks.mobile)
            margin-bottom 35px
                
    .big-num
        absolute-center(both)
        font-family "Helvetica Neue"
        border 5px solid #05a5e6
        border-radius 50%
        width 204px
        height 204px
        margin 0 auto 10%
        color #05a5e6
        opacity 1
        transition opacity 200ms ease
        & + .midtxt
            mid-txt()
            width 80%
            +below(breaks.big)
                width 55%
            +below(breaks.mobile)
                width 75%
        +below(breaks.big)
            margin-bottom 5%
        
        span
            font-size 140px
            transform translate(-52%,-56%)
            opacity 1
            transition opacity 300ms ease
        &.transparent
            opacity .3
            span
                opacity 0
    .out-links
        padding 30px 30px 0
        +below(breaks.mobile)
            padding-top 0
            padding-left 0
    a
        mid-txt()
        font-family "Helvetica Neue"
        display block
        padding-top 16px
        color rgba(dark, 0.35)
        white-space nowrap
        margin 0 auto
        transition color 400ms ease
        +above(breaks.big)
            &:hover
                color rgba(dark, 0.65)
        +below(breaks.big)
            color rgba(dark, 0.65)
        +below(breaks.mobile)
            font-size 16px
            line-height 1.1
        span
            padding-left 8px
        +below(breaks.mid)
            text-indent initial
            display inline-block
            width 54%
            position relative
            left 50%
            transform translateX(-50%)
        +below(breaks.mobile)
            &:first-child
                padding-top 0
    +below(breaks.tablet)            
        .out-links
            // width 60%
            margin auto
            +below(breaks.mobile)
                width auto
                a
                    display block
                    width auto
                    transform none
                    left auto
                    color rgba(dark, 0.75)    
    .centered-text
        title4()
        width 45%
        margin 0 auto
        color #8c8c8c
        line-height 32px
        text-align center
        +tablet()
            font-size 20px
        +below(breaks.base)
            width 70%
        +below(breaks.mobile)
            width auto
    

.android
    .info-block 
        .big-num
            span
                self-center()
                top 56%
                display block
                position relative
                text-align center


// OUT BLOCK
.out-block
    background #21455e
    text-align left
    h2, .mid-txt
        color #fff
    .mid-txt
        line-height 23px
        margin 0 auto
        letter-spacing 1px
        +below(breaks.mobile)
            font-size 14px
    h2
        margin 0 auto
        padding 56px 0 76px
        +below(breaks.base)
            padding 36px 0 56px
        +below(breaks.mobile)
            width auto
            padding-top 52px
            padding-bottom 65px
    .btn
        background #ededed
        color darkblue
        font-size 14px
        text-align center
        padding 15px 25px
        display inline-block
        font-family "HelveticaLight"
        font-weight 600
        letter-spacing 1px
        transition background 400ms ease
        +above(breaks.mobile)
            &:hover
                background #fff
// PAGES -- back home
.back-home
    position absolute -3px auto auto 40px
    width 82px
    background #f2f2f2
    border-radius 0 0 360px 360px
    padding-top 47px
    opacity 0.8
    z-index 9999
    +below(breaks.mobile)
        left 22px
        padding-top 17px
        width 50px
        position absolute
    span
        font-family "Helvetica Neue"
        font-size 14px
        display block
        text-align center
        color #363d48
        margin-bottom 10px
        +below(breaks.mobile)
            display none        
    a
        position relative
        width 58px
        height @width
        border-radius 100%
        background #363d48
        display block
        margin 0 auto 8px
        +below(breaks.mobile)
            width 40px
            height @width
            background #213749        
        &:before
            content ''
            self-center()
            transform translate(-35%, -50%) rotate(-45deg)
            width 20px
            height @width
            border-top 1px solid #656668
            border-left 1px solid #656668
            transition border 400ms ease
            +below(breaks.mobile)
                width 12px
                height @width
            
        &:hover
            &:before
                border-color lighten(#656668, 25)


.video-slider
    position relative
    min-height 42vh
    background #001f31
    .info-overlay
        opacity 0
        position absolute 0 0 0 0
        background rgba(#000b17, 0.9)
        z-index 9998
        transition opacity 200ms ease
        &.on
            opacity 1
        .inner
            self-center()
            width 98%
            h2
                fontsizer(30px, 50px)
                color #cdcdcd
                letter-spacing 2px
                text-align center
                width 100%
                margin-bottom 85px
                +below(breaks.mobile)
                    width auto
                    padding 0 12%
                    font-size 7vmin
            h5
                margin-bottom 22px
                color #ffffff
                text-align center   
                +below(breaks.mobile)
                    width auto
                    padding 0 12% 5px
                    font-size 5vmin
            a
                sub-title()
                display block !important
                color linkblue
                text-align center
                +above(breaks.mobile)
                    &:hover
                        color lighten(linkblue, 15)
            +below(breaks.mobile)
                h2
                    margin-bottom 35px
                h5
                    margin-bottom 8px
    video, img
        transition filter 400ms ease, -webkit-filter 400ms ease
    img
        transform none !important
                
.info-toggle
    position absolute
    top 4vw
    left 6vh
    cursor pointer
    white-space nowrap
    z-index 9999
    +below(breaks.tablet)
        top 4vh
        left 3vh
    +below(breaks.mobile)
        top 3vh
        left 2vh
    &:after
        content 'Click to learn more'
        letter-spacing 1px
        mid-txt()
        color #c9cbcf
        padding-left 14px
        display inline-block
        vertical-align middle
        +below(breaks.base2)
            padding-left 12px
        +below(breaks.mobile)
            small-txt()
            padding-left 12px
    &:before
        content ''
        display inline-block
        vertical-align middle
        border 2px solid #fff
        border-radius 50%
        width 64px
        height 64px
        background url('./assets/img/info.svg') no-repeat 50% 50% / auto 60%
        opacity 0.7
        +below(breaks.base2)
            width 40px
            height 40px
        +below(breaks.mobile)
            width 36px
            height 36px
            box-shadow 0 0 0.5px 0px white inset, 0 0 0.5px 0px white
            border-width 1px
            background-size auto 55%
            
    &.on
        &:before
           background-image url('./assets/img/X.svg')
           background-size auto 80%
        &:after
            content 'Close'


.rest-of-page
    +tablet()
        display none
    +below(737px)   // 6+ landscape
        display block