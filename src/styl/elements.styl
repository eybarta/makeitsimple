@import 'rupture'
@import 'settings'
.txt
    color #8aa7be
    line-height 20px
    letter-spacing 1.1px
.minitxt
    small-txt()
    letter-spacing 1.1px
    line-height 1.1
    color darken(lightgray, 15)
    strong
        font-weight normal
        color #023451
.subtxt
    color rgba(lightblue, 0.7)
    font-family 'Helvetica Neue'
    letter-spacing 0.5px
a.link, a.link:visited
    color linkblue

.item-group
    lost-utility clearfix
    .item
        +below(breaks.mobile)
            &:not(:first-child)
                margin-top 60px
        img
            margin-bottom 20px
            width 70%
            max-width 170px
            +below(breaks.mobile)
                max-width initial
        .minitxt
            padding 0 9%
            +below(breaks.mid)
                padding 0
            +below(breaks.mobile)
                font-size 15px


.preview-section
    .item-group
        padding-top 80px
        +below(breaks.mobile)
            padding-top 90px
            img
                margin-left -3px

.mis-slider
    padding-top 190px
    text-align center
    margin 0 auto
    width 98%
    +below(breaks.mobile)
        padding-top 140px
        width 94%
        h2 span
            text-align left

// INTROS
#simpleIntro
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    z-index 9
    width 111%
    opacity 0.3
    animation breathe
.intro
    position relative
    &.hp
        position absolute
        bottom 0
        opacity 0
    overflow hidden
    background url('./assets/img/bg.jpg') no-repeat 50% 50% / cover
    transition opacity 200ms ease
    &.stick
        position fixed
        z-index 999
    video
        z-index 11
        self-center()
        width 100%
        +portrait()
            display none
    .floater
        position absolute
        top 18%
        left 10%
        +below(breaks.mobile)
            top 2%
            left 2%
            transform scale(0.8)
    &:before
        +portrait()
            content ''
            background url('./assets/img/simple-intro.png') no-repeat 50% 50% / 160% auto
            position absolute 0 0 0 0
            z-index 1
    &.intro-v3:before
        background-image url('./assets/img/v3-big.jpg')
    /.pages-wrap .intro
        background url('./assets/img/bg.jpg') no-repeat 50% 0 / cover
        +below(breaks.mobile)
            background-position 50% 0
        &:before
            display none
    .intro-txt
        +below(breaks.mobile)
            width 80%
    .close-btn
        border-radius 18px
        border 1px solid #fff
        width 35px
        height 35px
        position absolute 30px false false 30px
        z-index 99999
        display none
        box-shadow 0 0 0.5px 0px white inset, 0 0 0.5px 0px white
        opacity 0.8
        @extend $cross
        &:before, &:after
            background #fff
            width 60%
    .i-360
        position absolute
        bottom 30px
        right 60px
        font-size 14px
        color #708190
        z-index 13
        opacity 0
        transition opacity 400ms ease-in-cubic
        +below(breaks.mobile)
            inline-mid()
            bottom 2px
            right auto
            left 2px
        img
            position relative
            transition transform 800ms ease-out-back
            
    em
        font-size 14px
        font-style italic
        color #fff
        display inline-block
        padding 0 2px
    .play-overlay
        absolute-center()
        position absolute 0 0 0 0
        cursor pointer
        z-index 12
        opacity 0
        transform scale(2)
        transition 200ms opacity ease-out-cubic, transform 200ms ease-out-quad
        img
            max-width 302px
            cursor pointer
            &.toplay
                cursor url('./assets/img/play-icon.png'), auto
            +below(breaks.tablet)
                width 60%
            
        div
            top 75%
            text-align center
            +below(breaks.bigger)
                top 80%
            span
                display block
            span:first-child
                font-size responsive 24px 48px
                color #fff
                padding-bottom 15px
            span:nth-child(2)
                mid-txt()
                letter-spacing 0.8px
                color #05a5e6
        .intro-txt
            width 100%
    iframe
        display none
        position absolute 0 0 0 0
        width 100%
        height 100%
        z-index 13
        transition opacity 200ms ease
        +below(breaks.tablet)
            top 0
            height 100%
    &.hp.playoverlay
        cure-me()
        &:before, video
            // blur-me()
        .play-overlay
            // background rgba(darkblue, 0.8)
            opacity 1
            transform scale(1)
        .i-360
            opacity 1
            +below(breaks.mobile)
                display none
                    
.play
    #playintro
        opacity 0 !important
    #i360
        opacity 0 !important
    &:before
        opacity 0.8
    iframe
        display block
.midtxt
    color #8c8c8c
    text-align center
    line-height 1.2
    letter-spacing 0.5px
    display block
    margin 0 auto
    +below(breaks.mid)
        width 40%
.bottom-graphic
    position relative
    background url('./assets/img/v3-bottom-graphic.jpg') no-repeat 50% bottom / auto 100%
    padding-bottom 16%
    margin-top 4%
    +below(breaks.base)
        padding-bottom 25%
        margin-top 10%
    +below(breaks.mid)
        min-height 5vh
        padding-bottom 30%
        margin-top 20%
.flip-title
    direction rtl
    white-space nowrap    
    +below(breaks.tablet)
        white-space normal
        padding-bottom 60px
    & > *
        display inline-block
        +below(breaks.tablet)
            display block
    .subtxt
        sub-title()
        direction ltr
        +below(breaks.tablet)
            margin-top 15px


// FAQ BLOCK
.faq-block
    padding-top 78px
    padding-bottom 78px
    h2
        text-align center
        +below(breaks.mobile)
            text-align left
            width 70%
.faq-control
    width 80%
    margin 60px auto 0
    +below(breaks.mobile)
        margin-top 90px
        width 100%
    h5
        font-family "Helvetica Neue"
        display inline-block
        vertical-align top
        width 40%
        color #0a314c
        text-align center
        padding-top 12px
        +below(breaks.tablet)
            width auto
            display block
            text-align left
            padding-top 0
            padding-bottom 57px

    .qa
        display inline-block
        vertical-align top
        width 55%
        border-left 1px solid gray
        padding-left 28px
        +below(breaks.tablet)
            width auto
            display block
        ul
            padding-top 25px
            li
                position relative
                margin 20px 0 20px
                padding-left 28px
                cursor pointer
                &:first-child
                    margin-top 0
                &:last-child
                    margin-bottom 0
                for num in 1..10
                    &:nth-child({num}) label > div:before
                        content ''+num
                label
                    cursor pointer
                    &>div
                        &:before
                            position absolute
                            top 0
                            left 0
                            transform translateY(5%)
                
                    h6
                        mid()
                        sub-title()
                        color #444
                        width 90%
                    .answer
                        mid-txt()
                        line-height 1.3
                        color gray
                        padding-top 20px
                        max-height 0
                        overflow hidden
                        transition max-height 400ms ease
                        +below(breaks.tablet)
                            color darken(gray, 25)
                    .plus
                        position absolute
                        top 5px
                        right 0
                        width 11px
                        height 10px
                        &:before, &:after
                            content ''
                            position absolute
                            top 50%
                            left 50%
                            transform translate(-50%,-50%)
                            height 1px
                            width 100%
                            background gray
                        &:before
                            display none
                            background darken(linkblue, 12)
                            height 1px
                            transform translate(-50%,-50%) rotate(-90deg)
                    input:checked
                        & + div
                            &:after
                                content ''
                                position absolute
                                top 0
                                left -28px
                                height 100%
                                border-left 2px solid linkblue
                        & + div .plus
                            &:after
                                background darken(linkblue, 12)
                            &:before
                                display block
                        & + div h4
                            color linkblue
                        & + div .answer
                            max-height 200px
                            +below(breaks.mobile)
                                max-height 400px

                &:after
                    content ''

                
// GOOGLE MAP
.google-map-wrapper
    width 100%
    height 70vh
    .google-map
        height 100% !important


// INFO BLOCK
.info-block
    overflow hidden
    +between(breaks.tablet, breaks.base)
        &:not(.num-grp)
            ul
                li
                    margin-right 0
                    white-space nowrap
                    &:first-child, &:nth-child(2)
                        padding-bottom 6%
                    inline-grp(top)
                    & > *
                        &.img-wrap
                            inline-grp(top)
                            padding-right 3%
                            height auto
                            width 48%
                            text-align right
                            img
                                max-width 80%
                        &.out-links
                            padding-left 6px
                            a
                                text-indent 0
                                white-space normal
    li
        +below(breaks.tablet)
            padding-top 10%
        +below(breaks.mobile)
            padding-top 78px
        &:last-child
            padding-bottom 0
    .img-wrap
        position relative
        height 200px
        padding-left 30px
        +below(breaks.mobile)
            height auto
            text-align left
        img
            margin 0 auto
            +above(breaks.base)
                position absolute
                bottom 0
            +below(breaks.mobile)
                width 55%
                margin 0 0 2%
        +below(breaks.tablet)
            inline-grp(bottom)
            margin-bottom 28px
                
    .big-num
        absolute-center(both)
        font-family "Helvetica Neue"
        border 5px solid #05a5e6
        border-radius 50%
        width 204px
        height 204px
        margin 0 auto 10%
        color #05a5e6
        & + .midtxt
            mid-txt()
            width 80%
            +below(breaks.base)
                width 60%
        +below(breaks.base)
            margin-bottom 2%
        
        span
            font-size 140px
            transform translate(-52%,-56%)
    .out-links
        padding 30px 30px 0
        +below(breaks.base)
            padding-top 6px
    a
        mid-txt()
        font-family "Helvetica Neue"
        display block
        padding-top 16px
        color rgba(dark, 0.35)
        white-space nowrap
        margin 0 auto
        transition color 400ms ease
        &:hover
            color rgba(dark, 0.65)
        span
            padding-left 8px
        +below(breaks.mid)
            text-indent initial
            display inline-block
            width 54%
            position relative
            left 50%
            transform translateX(-50%)
    +below(breaks.tablet)            
        .out-links
            width 60%
            margin auto
            +below(breaks.mobile)
                width auto
                a
                    display block
                    width auto
                    transform none
                    left auto
                    color rgba(dark, 0.75)
                    &:hover
                        color rgba(dark, 0.95)
    
    .centered-text
        title4()
        width 45%
        margin 0 auto
        color #8c8c8c
        line-height 32px
        text-align center
        +below(breaks.base)
            width 70%
        +below(breaks.mobile)
            width 80%
    
// OUT BLOCK
.out-block
    background #21455e
    text-align center
    h2, .mid-txt
        color #fff
    .mid-txt
        line-height 23px
        margin 0 auto
        letter-spacing 1px
    h2
        width 60%
        margin 0 auto
        padding 56px 0 76px
        +below(breaks.base)
            padding 36px 0 56px
    .btn
        background #ededed
        color darkblue
        font-size 14px
        text-align center
        padding 15px 25px
        display inline-block
        font-family "Helvetica Thin txt"
        font-weight 600
        letter-spacing 1px

// PAGES -- back home
.back-home
    position absolute -3px auto auto 40px
    width 82px
    background #f2f2f2
    border-radius 0 0 360px 360px
    padding-top 45px
    opacity 0.8
    z-index 9999
    span
        font-family "Helvetica Neue"
        font-size 14px
        display block
        text-align center
        color #363d48
        margin-bottom 10px
    a
        position relative
        width 58px
        height @width
        border-radius 100%
        background #363d48
        display block
        margin 0 auto 16px
        &:before
            content ''
            self-center()
            transform translate(-35%, -50%) rotate(-45deg)
            width 20px
            height 20px
            border-top 1px solid #656668
            border-left 1px solid #656668
            transition border 400ms ease
        &:hover
            &:before
                border-color lighten(#656668, 25)


.video-slider
    position relative
    .info-overlay
        opacity 0
        position absolute 0 0 0 0
        background rgba(#000b17, 0.9)
        z-index 9998
        transition opacity 200ms ease
        &.on
            opacity 1
        .inner
            self-center()
            width 98%
            h2
                fontsizer(30px, 50px)
                color #cdcdcd
                letter-spacing 2px
                text-align center
                width 100%
                margin-bottom 85px
            h5
                margin-bottom 22px
                color #ffffff
                text-align center            
            a
                sub-title()
                display block !important
                color linkblue
                text-align center
            +below(breaks.mobile)
                h2
                    margin-bottom 35px
                h5
                    margin-bottom 8px
    video, img
        transition filter 400ms ease, -webkit-filter 400ms ease
    img
        transform none !important
       
                
.info-toggle
    position absolute
    top 7vh
    left 6vh
    cursor pointer
    white-space nowrap
    z-index 9999
    +below(breaks.tablet)
        top 4vh
        left 3vh
    +below(breaks.mobile)
        top 3vh
        left 2vh
    &:after
        content 'Click to learn more'
        mid-txt()
        color #c9cbcf
        padding-left 14px
        display inline-block
        vertical-align middle
        transition content 200ms ease
        +below(breaks.tablet)
            padding-left 6px
        +below(breaks.mobile)
            small-txt()
    &:before
        content ''
        display inline-block
        vertical-align middle
        border 2px solid #bcbec2
        border-radius 50%
        width 64px
        height 64px
        background url('./assets/img/info.svg') no-repeat 50% 50% / auto 60%
        transition background 200ms ease
        +below(breaks.tablet)
            width 40px
            height 40px
        +below(breaks.mobile)
            width 30px
            height 30px
    &.on
        &:before
           background-image url('./assets/img/X.svg')
           background-size auto 80%
        &:after
            content 'Close'