// margins + padding aliases
$space = {
	mt: margin-top,
	mb: margin-bottom,
	ml: margin-left,
	mr: margin-right,
	pt: padding-top,
	pb: padding-bottom,
	pl: padding-left,
	pr: padding-right,
}
// ALIAS
@alias {
	mt: margin-top;
	mb: margin-bottom;
	ml: margin-left;
	mr: margin-right;
	pt: padding-top;
	pb: padding-bottom;
	pl: padding-left;
	pr: padding-right;
}
// HEADER HEIGHT
head-height = 57px

$cross
	&:before, &:after
		content ''
		display block
		position absolute  
		transform-origin 50%
		top 50%
		left 50%
		height 1px
		width 100%
		background linkblue
	&:before
		transform translate(-50%, -1px) rotate(-45deg)
	&:after
		transform translate(-50%, 0) rotate(45deg)

	



// GRID
$centered
	lost-center 1200px

// COLORS 
dark = #1a232e
darkblue = #023451
lightblue = #16507d
midblue = #33a0ff
linkblue = #05a5e6
lightgray = #c4c4c4
