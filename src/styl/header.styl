@import 'settings'
@import 'options'

$hamburger
    &:before, &:after
            content ''
            display block
            position absolute
            top 50%
            left 50%
            width 48%
            opacity 0.9
        &:before
            transform translate(-50%, -10.5px)
            box-sizing content-box
            height 3px
            border-top 5px solid #fff
            border-bottom 5px solid #fff
        &.background--light:before
                border-color #000
            +below(breaks.mobile)
                border-width 4px
                height 2px
                transform translate(-50%, -7.5px)
        &:after
            background #fff
            height 5px
            transform translate(-50%, 5.5px)
            +below(breaks.mobile)
                height 4px
                transform translate(-50%, 4.5px)      
        &.background--light:after
            background #000 


header
    position fixed
    top 0
    left 50%
    transform translate3d(0,0,0)
    transform translate(-50%,0px)
    transform-origin 50%
    background #222935
    height head-height
    width 100%
    z-index 1001
    transition all 400ms ease-in-out-circ
    overflow hidden
    +below(breaks.tablet)
        height auto
    &:before, &:after
        content ''
        opacity 0
        transition opacity 1200ms ease
    

    .contain
        transition opacity 100ms ease
        text-align center
        height 100%
        width 95%
        margin 0 auto
        max-width 1100px
        +above(breaks.tablet)
            height 100%
            absolute-center(vertical)
        .nav
            inline-mid()
            width 100%
            display block
            +above(breaks.tablet)
                height head-height
                right 0
                height 100%
                width auto
            li
                margin 0 13px
                +below(breaks.tablet)
                    display block !important
                a
                    mid-txt()
                    color linkgray
                    position relative
                    -webkit-font-smoothing antialiased
                    -moz-osx-font-smoothing grayscale
                    &:after
                        content ''
                        width 0
                        position absolute
                        bottom 0
                        left 50%
                        transform translate(-50%, 10px)
                        border-bottom 1px solid linkgray
                        transition width 300ms ease-out-back
                    &:hover:after
                        width 100%
                    &.active
                        color linkblue
                        &:after
                            width 100%
        .logo
            width 235px
            height head-height
            display block
            margin 0 auto
            background url('data:img/png;base64,') no-repeat 50% 50%
            +above(breaks.tablet)
                left 0
                height 26px
    &.hamburger 
        top 3%
        border-radius 50%
        text-align center
        +below(breaks.tablet)
            top 0           
            background transparent
            transform initial

        // transition left 400ms ease-in-out-circ
        @extend $hamburger      
        &.placed
            left 96%
            opacity 0.6
            cursor pointer
            +below(breaks.tablet)
                right 0
                left auto
            &:hover
                +above(breaks.tablet)
                    opacity 1
    &.animate
        height 0px
        width 3%
        padding-top 3%
        border-radius 50%
        +below(breaks.tablet)
            width 10%
            padding-top 10%
        .contain
            opacity 0
    &.maxed
        @extend $hamburger
        &:before, &:after
            +below(breaks.tablet)
                height 3px
                background #08a6e7
                border 0
                opacity 1
                top 15%
                right 2%
                width 4%
                left auto
                
        &:before
            +below(breaks.tablet)
                transform rotate(-45deg)
        &:after
            +below(breaks.tablet)
                transform rotate(45deg)