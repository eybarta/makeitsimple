@import 'settings'
@import 'options'

$hamburger
    &:before, &:after
            content ''
            display block
            position absolute
            top 50%
            left 50%
            width 48%
            opacity 0.9
        &:before
            transform translate(-50%, -8px)
            box-sizing content-box
            height 6px
            border-top 2px solid #fff
            border-bottom 2px solid #fff
            +below(breaks.tablet)
                transform translate(-50%, -6px)
                height 4px
                
        &:after
            background #fff
            height 2px
            transform translate(-50%, 8px)
            +below(breaks.tablet)
                transform translate(-50%, 6px)


header
    position fixed
    top 0
    left 50%
    transform translate3d(0,0,0)
    transform translate(-50%,0px)
    transform-origin 50%
    background #222935
    height head-height
    width 100%
    z-index 1001
    transition transform 400ms ease-in-out-circ, top 400ms ease-in-out-circ, left 400ms ease-in-out-circ, width 400ms ease-in-out-circ
    +below(breaks.tablet)
        opacity 0
        height auto
        transition opacity 400ms ease-in-out-circ
        &.loaded
            opacity 1
    &:before, &:after
        content ''
        opacity 0
        transition opacity 1200ms ease
        cursor pointer
    +above(breaks.tablet)
        &:not(.placed):before,
        &:not(.placed):after
            height 100%
            position absolute
            top 0
            background #222935
            width 29px
            border-radius 360px 0 0 360px
            left -29px
            border 0
            transform none
            opacity 0.9
        &:not(.placed):after
            border-radius 0 360px 360px 0
            right -29px
            left auto

    .contain
        position relative
        transition opacity 400ms ease
        text-align center
        height 100%
        width 95%
        margin 0 auto
        max-width 1200px
        overflow hidden
        +above(breaks.tablet)
            height 100%
            absolute-center(vertical)
        .nav
            inline-mid()
            width 100%
            display block
            padding 10% 0
            +above(breaks.tablet)
                padding 0
                height head-height
                right 0
                height 100%
                width auto

            li
                margin 0 13px
                +below(breaks.tablet)
                    display block !important
                    margin-bottom 20px
                a
                    mid-txt()
                    color linkgray
                    position relative
                    -webkit-font-smoothing antialiased
                    -moz-osx-font-smoothing grayscale
                    &:after
                        content ''
                        width 0
                        position absolute
                        bottom 0
                        left 50%
                        transform translate(-50%, 10px)
                        border-bottom 1px solid linkgray
                        transition width 300ms ease-out-back
                    +below(breaks.tablet)
                        text-transform uppercase
                        font-family 'Helvetica Thin txt'
                        letter-spacing 1.1px
                        &:after
                            bottom 5px
                    &:hover:after
                        width 100%
                    &.active
                        color linkblue
                        &:after
                            width 100%
        .logo
            width 235px
            height head-height
            display block
            margin 0 auto
            background url('data:img/png;base64,') no-repeat 50% 50%
            +above(breaks.tablet)
                left 0
                height 26px
    &.hamburger 
        @extend $hamburger
        top 3%
        border-radius 50%
        text-align center
        +below(breaks.tablet)
            top 1%        
            transform initial
            left auto
            right 3%
            opacity 0.6
            cursor pointer
            width 13%
            padding-top 13%
            .contain
                opacity 0
                height 0
                overflow hidden
    &.seed
        border-radius 50%
        overflow hidden
        top 50%
        left 50%
        transform translate(-50%,-50%)
        width 1px
        height 1px
        opacity 0
        transition opacity 400ms linear, width 400ms ease, height 400ms ease, transform 400ms ease, border-radius 400ms ease, top 400ms ease, left 400ms ease
    
    &.animate
        height 58px
        width 0px
        border-radius 0
        +below(breaks.tablet)
            width 58px
        .contain
            opacity 0
    &.placed
        width 58px
        left 96%
        opacity 0.6
        cursor pointer
        background #222935
        border-radius 360px
        transition transform 400ms ease-in-out-circ, top 400ms ease-in-out-circ, left 400ms ease-in-out-circ
        +below(breaks.tablet)
            left auto
    &.maxed
        @extend $hamburger
        height 100%
        width 100%
        border-radius 0
        opacity 1
        .contain
            opacity 1
            height 100%
            .logo
                self-center(horizontal)
                bottom 0
            .nav
                self-center()            
        &:before, &:after
            +below(breaks.tablet)
                height 3px
                background #08a6e7
                border 0
                opacity 1
                top 3%
                right 2%
                width 4%
                left auto                
        &:before
            +below(breaks.tablet)
                transform rotate(-45deg)
        &:after
            +below(breaks.tablet)
                transform rotate(45deg)