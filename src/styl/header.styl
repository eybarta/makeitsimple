@import 'settings'
@import 'options'


header-height = 58px
header-height-mini = 40px


$close
    width unit(header-height/2, 'px')
    height @width
    self-center(vertical)
    right 3%
    +below(breaks.base)
        width unit(header-height-mini/2, 'px')
        height @width
    +below(breaks.mobile)
        right unit(header-height-mini/2, 'px')
        top @right
        transform none
    @extend $cross
    
$hamburger
    self-center()
    width unit(header-height/2, 'px')
    z-index 9
    +below(breaks.base)
        width unit(header-height-mini/2, 'px')
    &:before, &:after
            content ''
            display block
            position absolute
            top 50%
            left 50%
            width 100%
            opacity 0.9
            background none
        &:before
            transform translate(-50%, -8px)
            box-sizing content-box
            height 6px
            border-top 2px solid #fff
            border-bottom 2px solid #fff
            +below(breaks.base)
                transform translate(-50%, -6px)
                height 4px
                
        &:after
            background #fff
            height 2px
            transform translate(-50%, 8px)
            +below(breaks.base)
                transform translate(-50%, 6px)


header
    position fixed
    top 0
    left 50%
    transform translate3d(0,0,0)
    transform translate(-50%,0px)
    transform-origin 50%
    background #222935
    height header-height
    width 105%
    z-index 1001
    transition transform 400ms ease-in-out-circ, top 400ms ease-in-out-circ, left 400ms ease-in-out-circ, width 400ms ease-in-out-circ, opacity 650ms ease-out-quad, clip-path 600ms ease-out-back, -webkit-clip-path 600ms ease-out-back
    border-radius 360px
    overflow hidden
    +below(breaks.base)
        height header-height-mini
    +below(breaks.tablet)
        height 100vh
    +below(breaks.mobile)
        border-radius 0
        width 100%
    .toggler
        cursor pointer
        position absolute
        z-index 99
    .contain
        position relative
        text-align center
        height 100%
        width 85%
        margin 0 auto
        max-width 1200px
        overflow hidden
        opacity 0
        transition opacity 400ms ease
        .nav
            float right
            inline-mid()
            width 100%
            display block
            padding 10% 0
            backface-visibility hidden
            +below(breaks.tablet)
                position relative
                transform translateY(-80%)
                transition  transform 400ms ease-in-out-quad
            +above(breaks.tablet)
                padding 0
                height header-height
                right 0
                height 100%
                width auto
            li
                margin 0 13px
                +below(breaks.tablet)
                    display block !important
                    margin-bottom unit(header-height-mini/2, 'px')
                a
                    display inline-block
                    transform translate3d(0,0,0)
                    font-size 14px
                    color linkgray
                    position relative
                    font-family 'HelveticaLight' !important
                    padding-bottom 5px
                    border-bottom 1px solid transparent
                    &:hover, &.active
                         border-bottom 1px solid linkgray
                    &.active
                        color linkblue
                    +below(breaks.tablet)
                        sub-title()
                        text-transform uppercase
                        letter-spacing 1px
        .logo
            self-center(vertical)
            width 235px
            height header-height
            display block
            margin 0 auto
            background url('data:img/png;base64,') no-repeat 50% 50%
            +above(breaks.tablet)
                left 0
                height 26px
            +below(breaks.tablet)
                self-center(horizontal)
                bottom 5%
                top auto
    &.maximized
        .toggler
            @extend $close
        .contain
            opacity 1
            .nav
                // transform translateY(-50%)
        +below(breaks.tablet)
            height 100vh
            clip-path circle(100vh at center)
            -webkit-clip-path circle(100vh at center)
            opacity 1
            .nav
                self-center(vertical)
  
    &.animate
        width header-height
        .contain
            opacity 0
        +below(breaks.base)
            width header-height-mini
        +below(breaks.tablet)
            width 100vw
            height 100vh
            clip-path circle(100vh at center)
            -webkit-clip-path circle(100vh at center)
    &.hamburger
        top 1%
        +below(breaks.tablet)
            top 0
            right 0
            left 0
            bottom 0
            transform translate(0,0)
            width 100%
            height 100%
            clip-path circle(1vh at center)
            -webkit-clip-path circle(1vh at center)
            opacity 0.2
            transform-origin 50% 50%
            .nav
                transform translate(-50%, -150%)
                transition transform 600ms ease-out-back, opacity 400ms ease-out
            .contain
                opacity 0
                height 0
                overflow hidden
                .nav
                    opacity 0
                    transform translate(-50%, -150%)    
    &.placed
        left calc(100% - 50px)
        opacity 0.6
        cursor pointer
        background #222935
        transition transform 400ms ease-in-out-circ, top 400ms ease-in-out-circ, left 400ms ease-in-out-circ
        .toggler
            @extend $hamburger
        +below(breaks.tablet)
            top unit(header-height-mini/2, 'px')
            left calc(100% - 60px)
            width 40px
            height 40px
            clip-path none
            border-radius 360px