@import '~normalize'
@import 'rupture'
@import 'settings'

body
    +below(737px,orientation: landscape)
        background url('./assets/img/landscape-unsupported.jpg') no-repeat 0 0 / cover
        overflow hidden
        *
            display none
    @media all and (min-width:768px) and (max-width:1024px) and (orientation: portrait)
        background url('./assets/img/portrait-not-supported.jpg') no-repeat 0 0 / cover
        overflow hidden
        *
            display none
    position relative
    font-family "Helvetica Thin", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight 300
    & > *
        font-family "Helvetica Thin", "Helvetica Neue", Helvetica, Arial, sans-serif


.full-height
    width 100%
    min-height 100vh


.wrap
    img.big_graphic
        vertical-align middle
        width 43%
        +below(breaks.base)
            margin 3% 5% 0 -5%
            width 45%
        +below(breaks.tablet)
            width 55%
            transform initial
            // width auto
            display block
            margin 0 auto 40px
        +below(breaks.mobile)
            max-width initial
            width 130%
            margin-left -15%
            

    .infobox
        display inline-block
        width 56%
        vertical-align middle
        padding 70px 0 0 2%
        .info-title
            padding 0 5%
            h2
                padding-bottom 20px
            +below(breaks.mobile)
                padding 0
        +below(breaks.base)
            width 54%
            .txt
                width 90%
                padding-top 10px
        +below(breaks.tablet)
            width 100%
        +below(breaks.mobile)
            padding 0
            .info-title, .txt
                width auto


    
        
// GRID
for num in (1..12)
	.col-{num}
		lost-column num/12

.group-3
    &.centered
        centered(900px)
    & > *
        lost-column 1/3 4 1%
        +below(breaks.mobile)
            lost-column 1/1 1 0

.group-4
    lost-utility clearfix
    &.centered
        centered(1200)
        +below(breaks.big)
            centered(900)
    & > *
        lost-column 1/4 4 2%
        +below(breaks.big)
            &:not(.imgs)
                lost-column 1/2 2 2%
        +below(breaks.mobile)
            lost-column 1/1 1 0
    
