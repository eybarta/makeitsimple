@import '~normalize'
@import 'rupture'
@import 'settings'

body
    font-family "Helvetica Thin", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight 300
    & > *
        font-family "Helvetica Thin", "Helvetica Neue", Helvetica, Arial, sans-serif
        


.full-height
    width 100%
    min-height 100vh

#top
    position relative
    height calc(100vh + 300px)    
.wrap
    img.big_graphic
        vertical-align middle
        width 43%
        +below(breaks.base)
            margin 3% 5% 0 -5%
            width 45%
        +below(breaks.tablet)
            max-width 50%
            transform initial
            width auto
            display block
            margin 0 auto 40px
        +below(breaks.mobile)
            max-width 80%
            

    .infobox
        display inline-block
        width 56%
        vertical-align middle
        padding 70px 0 0 2%
        .info-title
            padding 0 5%
            +below(breaks.mobile)
                padding 0
        +below(breaks.base)
            width 54%
            .txt
                width 90%
                margin-top 10px
        +below(breaks.tablet)
            width 100%
        +below(breaks.mobile)
            padding 0
            .info-title, .txt
                width auto


    
        
// GRID
for num in (1..12)
	.col-{num}
		lost-column num/12

.group-3
    &.centered
        centered(900px)
    & > *
        lost-column 1/3 4 1%
        +below(breaks.mobile)
            lost-column 1/1 1 0

.group-4
    lost-utility clearfix
    &.centered
        centered(1200)
    & > *
        lost-column 1/4 4 2%
        +below(breaks.base)
            lost-column 1/2 2 2%
        +below(breaks.mobile)
            lost-column 1/1 1 0


footer
    min-height 40vh
    background darken(#fbfbfd, 1)
    padding 2% 8%
    padding-bottom 1%
    +below(breaks.mobile)
        padding-top 6%
    & > ul
        centered(1000)
        padding 0 30px
        & > *
            lost-column 1/3 3 8%
            +below(breaks.base)
                lost-column 1/1 1 0
                padding-top 116px
                margin-top 0
                &:first-child
                    padding-top 78px                
    .minitxt
        small-txt()
        margin-bottom 10px
        color darken(lightgray, 40)
        line-height 1.3
        +below(520px)
            width 100%
        &:last-child
            margin-top 16px
            ul 
                margin 0
                padding 0
                li
                    small-txt()
                    color #727272
                    margin 0
                    padding 0 0 3px

    h6
        margin-bottom 20px
        color linkgray
        &:after
            content ''
            display block
            padding-top 20px
            width 16%
            border-bottom 1px solid lightgray
            +below(breaks.base)
                padding-top 15px
    a.link
        small-txt()
        display block
    small
        small-txt()
        display block
        color lightgray
        text-align center
        padding-top 100px
        +below(breaks.base)
            padding-top 140px
